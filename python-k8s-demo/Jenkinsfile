pipeline {
    agent any

    environment {
        IMAGE_NAME = "gcr.io/rama17-05-2020/python-k8s-demo"
        GCP_CREDENTIALS = credentials('jen-key.json')
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ichbinuus/jenkins-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:${BUILD_NUMBER}")
                }
            }
        }

        stage('Push to GCR') {
            steps {
                script {
                    // Save GCP creds to a file
                    writeFile file: 'key.json', text: GCP_CREDENTIALS
                    sh '''
                        gcloud auth activate-service-account --key-file=jen-key.json
                        gcloud auth configure-docker -q
                        docker push ${IMAGE_NAME}:${BUILD_NUMBER}
                    '''
                }
            }
        }
    }
}
