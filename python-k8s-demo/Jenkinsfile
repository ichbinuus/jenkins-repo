pipeline {
    agent any

    environment {
        IMAGE_NAME = "gcr.io/rama17-05-2020/python-k8s-demo"
        FULL_IMAGE = "${IMAGE_NAME}:${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ichbinuus/jenkins-repo.git'
            }
        }

       stage('Build Docker Image') {
    steps {
        sh "docker build -t ${FULL_IMAGE} python-k8s-demo/"
    }
}


        stage('Push to GCR') {
            steps {
                withCredentials([file(credentialsId: '3d6f17f4-833c-4f0d-a3a5-e7b112e36973', variable: 'GCP_KEY')]) {
                    sh '''
                        gcloud auth activate-service-account --key-file=$GCP_KEY
                        gcloud auth configure-docker -q
                        docker push ${IMAGE_NAME}:${BUILD_NUMBER}
                    '''
                }
            }
        }
    }
}
