pipeline {
    agent any

    environment {
        PROJECT_ID = 'rama17-05-2020'
        IMAGE_NAME = "gcr.io/rama17-05-2020/python-k8s-demo"
        CLUSTER = 'cluster-1'
        REGION = 'asia-south1'
    }

    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/ichbinuus/your-python-app.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Push to GCR') {
            steps {
                sh "gcloud auth configure-docker"
                sh "docker push ${IMAGE_NAME}"
            }
        }

        stage('Deploy to GKE') {
            steps {
                sh "gcloud container clusters get-credentials ${CLUSTER} --region ${REGION}"
                sh "kubectl set image deployment/python-k8s-deployment python-k8s=${IMAGE_NAME} || kubectl apply -f k8s/"
            }
        }
    }
}
